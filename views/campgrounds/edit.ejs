<%- layout('layouts/boilerplate') %> 

    <h1 class="text-center">Edit Campground</h1>
    <div class="row">
        <div class="col-10 col-lg-6 offset-1 offset-lg-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %> " id="title"  required>
                </div>
                <div class="form-group">
                    <label for="img">Image</label>
                    <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %> " id="img"  required>
                </div>
                <div class="form-row">
                    <div class="form-group col-5">
                        <label for="country">Country</label>
                        <input type="text" class="form-control" name="campground[location][country]" value="<%= campground.location.country %> " id="country" required>
                    </div>
                    <div class="form-group col-4">
                        <label for="state">State</label>
                        <input type="text" class="form-control" name="campground[location][state]" value="<%= campground.location.state %> " id="state" required>
                    </div>
                    <div class="form-group col-3">
                        <label for="inputCity">City</label>
                        <input type="text" class="form-control" name="campground[location][city]" value="<%= campground.location.city %> " id="inputCity" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="img">Campground Price</label>
                    <div class="input-group">
                        <div class="input-group-text">$</div>
                        <input type="number" class="form-control" name="campground[price]" id="img" value="<%= campground.price %>" required placeholder="<%= campground.price %>">
                    </div>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="campground[description]" rows="3"><%= campground.description %></textarea>
                </div>

                <button class="btn btn-primary btn-block" type="submit">Update</button>
            </form>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-5 col-lg-3">
            <a class="btn btn-secondary btn-block" href="/campgrounds/<%= campground._id %> " role="button">Cancel</a>
        </div>
        <div class="col-5 col-lg-3">
            <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger btn-block">Delete</button>
            </form>
        </div>
    </div>