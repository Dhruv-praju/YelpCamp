<%- layout('layouts/boilerplate') %> 

<h1 class="text-center"> New Campground</h1>
    <div class="row">
        <div class="col-10 col-lg-6 offset-1 offset-lg-3">
            <form action="/campgrounds" method="POST" class="needs-validation" novalidate>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="campground[name]" id="title" placeholder="" required>
                    <div class="invalid-feedback">
                        Please provide a valid title.
                    </div>
                </div>
                <div class="form-group">
                    <label for="img">Image</label>
                    <input type="text" class="form-control" name="campground[image]" id="img" placeholder="" required>
                    <div class="invalid-feedback">
                        Please provide a valid image.
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-5">
                        <label for="country">Country</label>
                        <input type="text" class="form-control" name="campground[location][country]" id="country" required>
                        <div class="invalid-feedback">
                        Please provide a valid country.
                    </div>
                    </div>
                    <div class="form-group col-4">
                        <label for="state">State</label>
                        <input type="text" class="form-control" name="campground[location][state]" id="state" required>
                        <div class="invalid-feedback">
                        Please provide a valid state.
                    </div>
                    </div>
                    <div class="form-group col-3">
                        <label for="inputCity">City</label>
                        <input type="text" class="form-control" name="campground[location][city]" id="inputCity" required>
                        <div class="invalid-feedback">
                        Please provide a valid city.
                    </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="img">Campground Price</label>
                    <div class="input-group">
                        <div class="input-group-text">$</div>
                        <input type="number" class="form-control" name="campground[price]" id="img" required placeholder="0.0">
                        <div class="invalid-feedback">
                        Please provide a valid price.
                    </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="campground[description]" rows="3"></textarea>
                </div>

                <button class="btn btn-primary btn-block" type="submit">Create</button>
            </form>
        </div>
    </div>

