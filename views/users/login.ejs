<% layout('layouts/boilerplate') %> 
    <h1 class="text-center">Log In</h1>

    <div class="row">
        <div class="col-10 col-lg-6 offset-1 offset-lg-3">
        
            <form action="/login" method="POST" class="needs-validation" novalidate>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Username</label>
                      <input type="text" class="form-control" name="username" id="exampleInputPassword1" required>
                      <small id="emailHelp" class="form-text text-muted">Username with which you registered.</small>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Password</label>
                      <input type="password" class="form-control" name="password" id="exampleInputPassword1" required>
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">Login</button>
                    <div class="text-center mt-4">
                      <span>Not registered? </span><a href="/register">Sign Up</a>
                    </div>
            </form>
        
        </div>
    </div>


